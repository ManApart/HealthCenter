<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rak.healthcenter.controllers.MainOptionsController">
	<columnConstraints>
      <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
	</columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <TextField fx:id="ageAmount" />
      <Button fx:id="advanceAge" mnemonicParsing="false" onAction="#advanceAge" text="Advance Age" GridPane.columnIndex="1" />
      <TextField fx:id="conditionCount" GridPane.rowIndex="1" />
      <Button fx:id="addRandomConditions" mnemonicParsing="false" onAction="#addRandomConditions" text="Add Conditions" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
</GridPane>
